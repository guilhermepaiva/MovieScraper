<%= simple_form_for(@movie) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :hotness %>
    <%= image_tag @movie.image_url, class: "thumbnail" %>
    <%= f.input :synopsis %>
    <%= f.input :rating %>
    <%= f.input :genre %>
    <%= f.input :director %>
    <%= f.input :runtime %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
